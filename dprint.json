{
	"typescript": {
		"lineWidth": 100,
		"useTabs": true,
		"quoteProps": "asNeeded"
	},
	"json": {
		"lineWidth": 100,
		"useTabs": true
	},
	"markdown": {
		"lineWidth": 100
	},
	"toml": {
		"useTabs": true
	},
	"includes": ["**/*.{json,md,toml,js,mjs,html,css,ts}"],
	"excludes": [
		"**/*-lock.json",
		"dist"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.83.0.wasm",
		"https://plugins.dprint.dev/json-0.17.0.wasm",
		"https://plugins.dprint.dev/markdown-0.15.2.wasm",
		"https://plugins.dprint.dev/toml-0.5.4.wasm"
	]
}
